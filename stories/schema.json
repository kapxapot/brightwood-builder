{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "required": ["id", "title", "language", "startId", "nodes"],
  "properties": {
    "id": {
      "type": "string"
    },
    "title": {
      "type": "string"
    },
    "description": {
      "type": "string"
    },
    "cover": {
      "type": "string",
      "format": "uri"
    },
    "language": {
      "type": "string",
      "enum": ["ru", "en", "de", "fr", "es", "it", "pt", "zh", "ja", "ko"]
    },
    "startId": {
      "type": "integer"
    },
    "position": {
      "type": "array",
      "items": {
        "type": "number"
      },
      "minItems": 2,
      "maxItems": 2
    },
    "nodes": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["id", "type", "text", "label"],
        "properties": {
          "id": {
            "type": "integer"
          },
          "type": {
            "type": "string",
            "enum": ["skip", "action", "finish", "redirect"]
          },
          "label": {
            "type": "string"
          },
          "text": {
            "type": "array",
            "items": {
              "type": "string"
            },
            "minItems": 1
          },
          "key": {
            "type": "string"
          },
          "position": {
            "type": "array",
            "items": {
              "type": "number"
            },
            "minItems": 2,
            "maxItems": 2
          },
          "nextId": {
            "type": "integer"
          },
          "actions": {
            "type": "array",
            "items": {
              "type": "object",
              "required": ["label", "id"],
              "properties": {
                "label": {
                  "type": "string"
                },
                "id": {
                  "type": "integer"
                }
              }
            }
          },
          "links": {
            "type": "array",
            "items": {
              "type": "object",
              "required": ["id"],
              "properties": {
                "weight": {
                  "type": "number"
                },
                "id": {
                  "type": "integer"
                }
              }
            }
          }
        }
      }
    },
    "viewport": {
      "type": "object",
      "required": ["x", "y", "zoom"],
      "properties": {
        "x": {
          "type": "number"
        },
        "y": {
          "type": "number"
        },
        "zoom": {
          "type": "number",
          "minimum": 0
        }
      }
    }
  }
}
